{
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "env": {}
    },
    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ],
      "env": {}
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "<YOUR_TOKEN>"
      }
    },
    "python-execution": {
      "command": "uv",
      "args": [
        "run",
        "python",
        "-m",
        "mcp_python"
      ],
      "env": {}
    },
    "filesystem": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--mount",
        "type=bind,src=/home/kblack0610,dst=/projects/kblack0610",
        "type=bind,src=/home/kblack0610/dev/AI/claude_assistant,dst=/projects/kblack0610/dev/AI/claude_assistant",
        "mcp/filesystem",
        "/projects"
      ]
    }
  }
}
